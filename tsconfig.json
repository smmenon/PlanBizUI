{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
	"files": ["src/app/app.module.ts","src/main.ts","src/typings.d.ts"],
  "angularCompilerOptions": {
	"genDir": "aot",
	"skipMetadataEmit": false
  },
	"exclude": ["node_modules"]
}